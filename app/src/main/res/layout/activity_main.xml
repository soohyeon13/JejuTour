<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".MainActivity">

    <RelativeLayout android:layout_width="match_parent"
                    android:layout_height="match_parent">


        <ImageView android:id="@+id/imageView"
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   app:srcCompat="@drawable/jejumap"/>

        <FrameLayout android:layout_width="match_parent"
                     android:layout_height="match_parent">

            <TextView android:id="@+id/textJeju"
                      android:text="JEJUTOUR"
                      android:textAppearance="@style/TextAppearance.AppCompat.Large"
                      android:layout_marginTop="150dp"
                      android:layout_width="match_parent"
                      android:gravity="center"
                      android:layout_height="wrap_content"/>

            <Button android:id="@+id/jejuEastbtn"
                    android:text="제주-동쪽"
                    android:layout_marginTop="210dp"
                    android:layout_marginLeft="260dp"
                    android:background="#00ff0000"
                    android:layout_width="80dp"
                    android:layout_height="30dp"/>

            <Button android:id="@+id/jejubtn"
                    android:text="제주시"
                    android:background="#00ff0000"
                    android:layout_marginTop="240dp"
                    android:layout_marginLeft="180dp"
                    android:layout_width="50dp"
                    android:layout_height="30dp"/>

            <Button android:id="@+id/jejuWestbtn"
                    android:text="제주-서쪽"
                    android:layout_marginTop="260dp"
                    android:layout_marginLeft="70dp"
                    android:background="#00ff0000"
                    android:layout_width="80dp"
                    android:layout_height="30dp"/>

            <Button android:id="@+id/seogbtn"
                    android:text="서귀포"
                    android:layout_marginTop="310dp"
                    android:layout_marginLeft="160dp"
                    android:background="#00ff0000"
                    android:layout_width="50dp"
                    android:layout_height="30dp"/>

            <Button android:id="@+id/seogEastbtn"
                    android:text="서귀포-동쪽"
                    android:layout_marginTop="280dp"
                    android:layout_marginLeft="260dp"
                    android:background="#00ff0000"
                    android:layout_width="80dp"
                    android:layout_height="30dp"/>

            <Button android:id="@+id/seogWestbtn"
                    android:text="서귀포-서쪽"
                    android:layout_marginTop="340dp"
                    android:layout_marginLeft="50dp"
                    android:background="#00ff0000"
                    android:layout_width="80dp"
                    android:layout_height="30dp"/>

        </FrameLayout>
    </RelativeLayout>
</LinearLayout>